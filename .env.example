# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env files to the repository

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mentorship_platform

# Session Security (generate a random secret key)
SESSION_SECRET=your-very-long-random-secret-key-here

# PostgreSQL Connection Details (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_secure_password
PGDATABASE=mentorship_platform

# Optional: Development Settings
FLASK_ENV=development
FLASK_DEBUG=true